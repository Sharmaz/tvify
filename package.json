{
  "name": "tvify",
  "description": "web app de busqueda para tv shows",
  "version": "0.1.0",
  "dependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "express": "^4.13.4",
    "jquery": "^2.2.1",
    "nib": "^1.1.0",
    "page": "^1.6.4",
    "qs": "^6.1.0"
  },
  "devDependencies": {
    "babelify": "^7.2.0",
    "browserify": "^13.0.0"
  },
  "scripts": {
    "build-js": "NODE_PATH=. browserify -t [ babelify --presets [ es2015 ] ] src/client/index.js > public/app.js",
    "stylus": "stylus --use nib --watch src/client/lib/style.styl --out public/style.css",
    "jade": "jade --watch --pretty src/client/lib/index.jade --out public",
    "serve": "NODE_PATH=. babel-node src/server --presets es2015",
    "start": "npm run build-js && npm run serve"
  }
}
